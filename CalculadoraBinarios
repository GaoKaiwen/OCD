  	public static int[] IgualarAoMaiorInt(int[] a, int tamanhoArray) {
	  	int[] retorno = new int[tamanhoArray];
	
	  	int i;
	  	int j = retorno.length-1;
	  	for(i = a.length-1; i > 0; i--) {
	  		retorno[j] = a[i];
	  		j--;
	  	}
	  	retorno[0] = a[i];
	  	
	  	return retorno;
  	}
	
