  		}
  	}

	public static String converteDecimalEmBinario(int i) {
    		return Integer.toBinaryString(i);
  	}

  	public static int[] maiorNumero(int[] a, int tamanhoArray) {
	  	int[] retorno = new int[tamanhoArray];
	
	  	for(int i = 0; i < tamanhoArray; i++) retorno[i] = a[i];

	  	return retorno;
  	}

