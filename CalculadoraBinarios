import java.util.Scanner;

class CalculadoraBinarios { 

	public static void main(String[] args) {
    		running();
  	}

  	public static void running() {
    		Scanner scan = new Scanner(System.in);
  
    		System.out.println("Calculadora de binarios\n" +
    		"Escolha um modo de entrada:\n" +
    		"d - descimal\n" +
    		"b - binario");
  
    		boolean entradaValida = false;
		String modoEntrada = "";
    		while(entradaValida = false) {
			modoEntrada = scan.next();
      			if(modoEntrada != "d" || modoEntrada != "b") {
        			System.out.println("Entrada invalida. Insira novamente.");
        			entradaValida = false;
      			}
      			else entradaValida = true;
		}
  
    		System.out.println("" +
    		"Escolha uma operacao:\n" +
    		"1 - Soma de binarios int\n" +
    		"2 - Subtracao de binarios int\n" +
    		"3 - Multiplicacao de binarios int\n" +
    		"4 - Divisao de binarios float\n" +
    		"5 - Soma de binarios float\n" +
    		"6 - Subtracao de binarios float\n" +
    		"7 - Multiplicacao de binarios float\n" +
    		"8 - Divisao de binarios float");
    
    		entradaValida = false;
		int operacao = 0;
    		while(entradaValida = false) {
			operacao = scan.nextInt();
			if(operacao < 1 || operacao > 8) {
				System.out.println("Entrada invalida. Insira novamente.");
				entradaValida = false;
			}
			else entradaValida = true;
    		}
    
    		String num1 = "";
    		String num2 = "";
		
		switch(operacao) {
			case 1: System.out.println("Somando dois binarios inteiros...");
				System.out.print("Digite o primeiro numero: ");
				num1 = scan.next();
				System.out.print("Digite o segundo numero: ");
				num2 = scan.next();
				
		}
  	}
  	
  	public static int[] arranjo(String numero, String entrada) {
  		int[] binario = null;
  		if(entrada == "d") {
  			if(Integer.parseInt(numero) < 0) binario[0] = 1;
  			else binario[0] = 0;
  			char[] array = numero.toCharArray();
  			for(int i = 1; i <= numero.length(); i++) {
  				binario[i] = Character.getNumericValue(array[i-1]);
  			}
  			return binario;
  		}
